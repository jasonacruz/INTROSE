public class RegistrationDAO {
    Connection connection = null;
	PreparedStatement stmt = null;
	ResultSet rs = null;
	private Connection getConnection() throws SQLException {
		Connection conn;
		conn = ConnectionFactory.getInstance().getConnection();
		return conn;
	}
	
	public boolean RegisterEmployee(Employee em)
	{
            try {
                String queryString = "UPDATE 'employee' SET 'emp_user' = "+em.getUsername()+" , 'emp_pass' = "+em.getPass()" , 'emp_changedpass' = true where 'emp_id' = '"+em.getID()+"' " ;
               
		connection = getConnection();
                System.out.println("aaa");
		stmt = connection.prepareStatement(queryString);
                System.out.println(em.getPass() + em.getUsername() +em.getID());
		stmt.executeUpdate();
                System.out.println("aaaaaaaaa");
                System.out.println("Done");
            }
            catch (SQLException e) {
                System.out.println("Not Done");
		return false;
            }
            
            return true;
	}
}
