import javax.swing.*;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class addEmployee extends JFrame implements ActionListener{
    private JPanel aEmployeePanel;
    private JLabel lName;
    private JLabel mName;
    private JLabel fName;
    private JLabel id;
    private JTextField fNameBox;
    private JTextField mNameBox;
    private JTextField lNameBox;
    private JTextField i;
    private JButton submit;
    private JLabel pos;
    private JLabel dept;
    private JComboBox positions;
    private JComboBox depts;
    private JPasswordField pw;
    private JLabel pass;
    private String[] p;
    private String[] d;
    Employee emp;
	EmployeeDao ed;
	
    public addEmployee(){
        super("Add Employee");
		ed = new EmployeeDao();
        String d[] = {"High School" , "Elementary", "Both"};
        String p[] = {"Principal", "Coordinator", "Subject Teacher"};
        aEmployeePanel = new JPanel();
        lName = new JLabel("Last Name");
        fName = new JLabel("First Name");
        mName = new JLabel("Middle Name");
        fNameBox = new JTextField(15);
        mNameBox = new JTextField(15);
        lNameBox = new JTextField(15);
        positions = new JComboBox(p);
        depts = new JComboBox(d);
        submit = new JButton("Confirm");
        id = new JLabel("ID number");
        i = new JTextField(10);
        add(aEmployeePanel);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        aEmployeePanel.add(lName);
        aEmployeePanel.add(lNameBox);
        aEmployeePanel.add(fName);
        aEmployeePanel.add(fNameBox);
        aEmployeePanel.add(mName);
        aEmployeePanel.add(mNameBox);
        aEmployeePanel.add(positions);
        aEmployeePanel.add(depts);
        aEmployeePanel.add(id);
        aEmployeePanel.add(i);
        aEmployeePanel.add(submit);
        
        submit.addActionListener(this);
        pack();
        setVisible(true);
    }
    
    public void actionPerformed(ActionEvent e){
        if(e.getSource() == submit){
            emp = new Employee();
            emp.setLastname(lNameBox.getText());
            emp.setMidname(mNameBox.getText());
            emp.setFirstname(fNameBox.getText());
            emp.setPosition(positions.getSelectedItem().toString());
            emp.setID(Integer.parseInt(i.getText()));
            System.out.println(emp.getFirstname());
            System.out.println(emp.getMidname());
            System.out.println(emp.getLastname());
            System.out.println(emp.getPosition());
            
            System.out.println("lolers");
            ed.addEmployees(emp);
            System.out.println("successfully added");
        }
    }
    
    public static void main(String[] args){
        addEmployee e = new addEmployee();
    }
}
